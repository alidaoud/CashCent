<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- Drawer, Header and End image container -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/paddingLarge"
        android:paddingEnd="0dp"
        android:background="@drawable/bg_home_top"
        android:paddingTop="@dimen/paddingXXLarge"
        android:paddingBottom="@dimen/paddingLarge">

        <ImageButton
            android:id="@+id/btn_drawer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:src="@drawable/ic_drawer" />

        <RelativeLayout
            android:layout_toEndOf="@id/btn_drawer"
            android:layout_marginStart="@dimen/paddingStandard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtView_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/paddingSmall"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtSizeSmall"
                    android:textStyle="normal"
                    tools:text="$0.03" />

                <TextView
                    android:id="@+id/txtView_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/paddingSmall"
                    android:textColor="@color/white"
                    android:textSize="@dimen/txtSizeStandard"
                    android:textStyle="normal"
                    android:background="@drawable/bg_white_transparent_radius"
                    tools:text="@string/card_watch_video" />
            </LinearLayout>



        </RelativeLayout>

        <ImageView
            android:id="@+id/imgView_item_grid"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_home_top" />
    </RelativeLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="-35dp"
        android:layout_marginStart="@dimen/paddingLarge"
        android:layout_marginEnd="@dimen/paddingLarge"
        android:padding="@dimen/paddingSmall"
        app:cardCornerRadius="@dimen/radiusStandard">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:paddingStart="@dimen/paddingStandard"
            android:paddingEnd="@dimen/paddingStandard"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <ImageView
                android:id="@+id/imgView_total_coins"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle_white"
                tools:src="@drawable/bitcoin"/>

            <LinearLayout
                android:id="@+id/txtView_total_coins_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:layout_toEndOf="@id/imgView_total_coins"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtSizeSmall"
                    android:textStyle="normal"
                    android:text="@string/title_total_coins" />

                <TextView
                    android:id="@+id/txtView_total_coins_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txtSizeLarge"
                    android:textStyle="bold"
                    tools:text="4,500" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_total_coins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:padding="@dimen/paddingSmall"
                android:backgroundTint="@color/color_bronze_offers_light"
                android:background="@drawable/bg_circle_white"
                android:src="@drawable/ic_arrow_right" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:background="@drawable/bg_btn_platinum_offers"
                android:paddingStart="@dimen/paddingXSmall"
                android:paddingEnd="@dimen/paddingXSmall">


            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- Scroll view child-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/paddingLarge"
            android:orientation="vertical">

            <!--Most points Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/paddingStandard"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txtSizeLarge"
                    android:textStyle="bold"
                    android:layout_marginBottom="@dimen/paddingSmall"
                    style="@style/TitleStyle"
                    android:text="@string/title_get_most_points"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:paddingStart="@dimen/paddingLarge"
                    android:paddingEnd="0dp"
                    android:paddingTop="@dimen/paddingLarge"
                    android:paddingBottom="@dimen/paddingLarge"
                    android:background="@drawable/bg_home_top_card">

                    <!-- Title and total container -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/txtSizeLarge"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:text="@string/title_play_earn"/>

                        <TextView
                            android:id="@+id/txtView_most_points_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/txtSizeSmall"
                            android:textStyle="normal"
                            android:paddingStart="@dimen/paddingSmall"
                            android:paddingEnd="@dimen/paddingSmall"
                            android:textColor="@color/white"
                            android:padding="@dimen/paddingXSmall"
                            android:background="@drawable/bg_circle_white_transparent"
                            tools:text="810,000"/>
                    </LinearLayout>

                    <!-- Play Now Button-->
                    <android.widget.Button
                        android:id="@+id/btn_play_now"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/bg_card_white"
                        android:shadowColor="@android:color/transparent"
                        android:text="@string/btn_play_now"
                        android:textAllCaps="false"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txtSizeStandard"
                        android:textStyle="normal" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="-20dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/img_most_points" />

                </RelativeLayout>

            </LinearLayout>

            <!--Quick points Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/paddingStandard"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/txtSizeLarge"
                    android:textStyle="bold"
                    style="@style/TitleStyle"
                    android:layout_marginBottom="@dimen/paddingSmall"
                    android:text="@string/title_quick_points"/>

                <!-- Quick Points Section -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:rowCount="2"
                    android:columnCount="2">

                    <!-- Watch Video Item -->
                    <LinearLayout
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/paddingStandard"
                        android:layout_margin="@dimen/paddingLarge"
                        android:background="@drawable/bg_watch_video_card">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:padding="@dimen/paddingLarge"
                            android:layout_marginBottom="@dimen/paddingLarge"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_circle_white_transparent"
                            tools:src="@drawable/ic_watch_video"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/paddingSmall"
                            android:layout_gravity="center"
                            android:textSize="@dimen/txtSizeStandard"
                            android:textColor="@color/white"
                            android:textStyle="normal"
                            style="@style/SemiBold"
                            android:text="@string/card_watch_video" />

                        <TextView
                            android:id="@+id/txtView_watch_video_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/paddingSmall"
                            android:layout_gravity="center"
                            android:textSize="@dimen/txtSizeSmall"
                            android:textColor="@color/white"
                            android:textStyle="normal"
                            tools:text="100.00"
                            android:gravity="center_vertical"
                            app:drawableStartCompat="@drawable/bitcoin" />
                    </LinearLayout>
                    <!-- Fun surveys Item -->
                    <LinearLayout
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/paddingStandard"
                        android:layout_margin="@dimen/paddingLarge"
                        android:background="@drawable/bg_fun_surveys_card">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:padding="@dimen/paddingLarge"
                            android:layout_marginBottom="@dimen/paddingLarge"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_circle_white_transparent"
                            tools:src="@drawable/ic_fun_surveys"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/paddingSmall"
                            android:layout_gravity="center"
                            android:textSize="@dimen/txtSizeStandard"
                            android:textColor="@color/white"
                            android:textStyle="normal"
                            style="@style/SemiBold"
                            android:text="@string/card_fun_surveys" />

                        <TextView
                            android:id="@+id/txtView_fun_surveys_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/paddingSmall"
                            android:layout_gravity="center"
                            android:textSize="@dimen/txtSizeSmall"
                            android:textColor="@color/white"
                            android:textStyle="normal"
                            tools:text="100.00"
                            android:gravity="center_vertical"
                            app:drawableStartCompat="@drawable/bitcoin" />
                    </LinearLayout>

                    <!-- Daily Tournment Item -->
                    <LinearLayout
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/paddingStandard"
                        android:layout_margin="@dimen/paddingLarge"
                        android:background="@drawable/bg_daily_tournment_card">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:padding="@dimen/paddingLarge"
                            android:layout_marginBottom="@dimen/paddingLarge"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_circle_white_transparent"
                            tools:src="@drawable/ic_daily_tournment"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/paddingSmall"
                            android:layout_gravity="center"
                            android:textSize="@dimen/txtSizeStandard"
                            android:textColor="@color/white"
                            android:textStyle="normal"
                            style="@style/SemiBold"
                            android:text="@string/card_daily_tournment" />

                        <TextView
                            android:id="@+id/txtView_daily_tournment_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/paddingSmall"
                            android:layout_gravity="center"
                            android:textSize="@dimen/txtSizeSmall"
                            android:textColor="@color/white"
                            android:textStyle="normal"
                            tools:text="100.00"
                            android:gravity="center_vertical"
                            app:drawableStartCompat="@drawable/bitcoin" />
                    </LinearLayout>
                    <!-- Refer friends Item -->
                    <LinearLayout
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:padding="@dimen/paddingStandard"
                        android:layout_margin="@dimen/paddingLarge"
                        android:background="@drawable/bg_refer_friends_card">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:padding="@dimen/paddingLarge"
                            android:layout_marginBottom="@dimen/paddingLarge"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_circle_white_transparent"
                            tools:src="@drawable/ic_refer_friends"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/paddingSmall"
                            android:layout_gravity="center"
                            android:textSize="@dimen/txtSizeStandard"
                            android:textColor="@color/white"
                            android:textStyle="normal"
                            style="@style/SemiBold"
                            android:text="@string/card_refer_friends" />

                        <TextView
                            android:id="@+id/txtView_refer_friends_total"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/paddingSmall"
                            android:layout_gravity="center"
                            android:textSize="@dimen/txtSizeSmall"
                            android:textColor="@color/white"
                            android:textStyle="normal"
                            tools:text="100.00"
                            android:gravity="center_vertical"
                            app:drawableStartCompat="@drawable/bitcoin" />
                    </LinearLayout>

                </GridLayout>

                <!-- Extra Points Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/TitleStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txtSizeLarge"
                        android:textStyle="bold"
                        android:layout_marginBottom="@dimen/paddingSmall"
                        android:text="@string/title_extra_points"/>


                    <!-- Platinum offers section -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/paddingStandard"
                        android:paddingEnd="@dimen/paddingStandard"
                        android:layout_marginTop="@dimen/paddingSmall"
                        android:layout_marginBottom="@dimen/paddingSmall"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_platinum_offers_item">

                        <ImageView
                            android:id="@+id/imgView_platinum"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:padding="@dimen/paddingXSmall"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_circle_white"
                            android:src="@drawable/ic_platinum_offers"/>

                        <TextView
                            style="@style/SemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_toEndOf="@id/imgView_platinum"
                            android:padding="@dimen/paddingSmall"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txtSizeStandard"
                            android:textStyle="normal"
                            android:text="@string/card_platinum_offers" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:paddingStart="@dimen/paddingSmall"
                            android:paddingEnd="@dimen/paddingSmall"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txtSizeSmall"
                            android:textStyle="normal"
                            tools:text="650,000"
                            android:background="@drawable/bg_btn_platinum_offers"
                            app:drawableStartCompat="@drawable/bitcoin" />

                    </RelativeLayout>

                    <!-- Diamond offers section -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/paddingStandard"
                        android:paddingEnd="@dimen/paddingStandard"
                        android:layout_marginTop="@dimen/paddingSmall"
                        android:layout_marginBottom="@dimen/paddingSmall"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_diamond_offers_item">

                        <ImageView
                            android:id="@+id/imgView_diamond"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:padding="@dimen/paddingXSmall"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_circle_white"
                            android:src="@drawable/ic_diamond_offers"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_toEndOf="@id/imgView_diamond"
                            android:padding="@dimen/paddingSmall"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txtSizeStandard"
                            android:textStyle="normal"
                            style="@style/SemiBold"
                            android:text="@string/card_diamond_offers" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:paddingStart="@dimen/paddingSmall"
                            android:paddingEnd="@dimen/paddingSmall"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txtSizeSmall"
                            android:textStyle="normal"
                            tools:text="650,000"
                            android:background="@drawable/bg_btn_diamond_offers"
                            app:drawableStartCompat="@drawable/bitcoin" />

                    </RelativeLayout>

                    <!-- Gold offers section -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/paddingStandard"
                        android:paddingEnd="@dimen/paddingStandard"
                        android:layout_marginTop="@dimen/paddingSmall"
                        android:layout_marginBottom="@dimen/paddingSmall"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_gold_offers_item">

                        <ImageView
                            android:id="@+id/imgView_gold"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:padding="@dimen/paddingXSmall"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_circle_white"
                            android:src="@drawable/ic_gold_offers"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_toEndOf="@id/imgView_gold"
                            android:padding="@dimen/paddingSmall"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txtSizeStandard"
                            android:textStyle="normal"
                            style="@style/SemiBold"
                            android:text="@string/card_gold_offers" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:paddingStart="@dimen/paddingSmall"
                            android:paddingEnd="@dimen/paddingSmall"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txtSizeSmall"
                            android:textStyle="normal"
                            tools:text="650,000"
                            android:background="@drawable/bg_btn_gold_offers"
                            app:drawableStartCompat="@drawable/bitcoin" />

                    </RelativeLayout>

                    <!-- Bronze offers section -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/paddingStandard"
                        android:paddingEnd="@dimen/paddingStandard"
                        android:layout_marginTop="@dimen/paddingSmall"
                        android:layout_marginBottom="@dimen/paddingSmall"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_bronze_offers_item">

                        <ImageView
                            android:id="@+id/imgView_bronze"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:padding="@dimen/paddingXSmall"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_circle_white"
                            android:src="@drawable/ic_bronze_offers"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_toEndOf="@id/imgView_bronze"
                            android:padding="@dimen/paddingSmall"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txtSizeStandard"
                            android:textStyle="normal"
                            style="@style/SemiBold"
                            android:text="@string/card_bronze_offers" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:paddingStart="@dimen/paddingSmall"
                            android:paddingEnd="@dimen/paddingSmall"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txtSizeSmall"
                            android:textStyle="normal"
                            tools:text="650,000"
                            android:background="@drawable/bg_btn_bronze_offers"
                            app:drawableStartCompat="@drawable/bitcoin" />

                    </RelativeLayout>

                    <!-- Purple offers section -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/paddingStandard"
                        android:paddingEnd="@dimen/paddingStandard"
                        android:layout_marginTop="@dimen/paddingSmall"
                        android:layout_marginBottom="@dimen/paddingSmall"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_purple_offers_item">

                        <ImageView
                            android:id="@+id/imgView_purple"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:padding="@dimen/paddingXSmall"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:background="@drawable/bg_circle_white"
                            android:src="@drawable/ic_purple_offers"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_toEndOf="@id/imgView_purple"
                            android:padding="@dimen/paddingSmall"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txtSizeStandard"
                            android:textStyle="normal"
                            style="@style/SemiBold"
                            android:text="@string/card_purple_offers" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:paddingStart="@dimen/paddingSmall"
                            android:paddingEnd="@dimen/paddingSmall"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txtSizeSmall"
                            android:textStyle="normal"
                            tools:text="650,000"
                            android:background="@drawable/bg_btn_purple_offers"
                            app:drawableStartCompat="@drawable/bitcoin" />

                    </RelativeLayout>

                    <!-- easy surveys section -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/paddingStandard"
                        android:paddingEnd="@dimen/paddingStandard"
                        android:layout_marginTop="@dimen/paddingSmall"
                        android:layout_marginBottom="@dimen/paddingSmall"
