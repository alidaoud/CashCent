<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CashCent" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:fontFamily">@font/quicksand</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Regular">
        <item name="android:fontFamily">@font/quicksand</item>
        <item name="fontFamily">@font/quicksand</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/txtSizeStandard</item>
    </style>
    <style name="SemiBold">
        <item name="android:fontFamily">@font/Quicksand_SemiBold</item>
        <item name="fontFamily">@font/Quicksand_SemiBold</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/txtSizeStandard</item>
    </style>
    <style name="TitleStyle">
        <item name="android:fontFamily">@font/Quicksand_Bold</item>
        <item name="fontFamily">@font/Quicksand_Bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/txtSizeLarge</item>
    </style>

</resources>